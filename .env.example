# Environment Variables Template for Bario Entertainment System
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# ==============================
# AUTHENTICATION & SECURITY
# ==============================

# NextAuth Configuration (Required)
# Generate a secure secret: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# ==============================
# SUPABASE CONFIGURATION
# ==============================

# Supabase Project Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# ==============================
# WALLET & BLOCKCHAIN
# ==============================

# WalletConnect Project Configuration
NEXT_PUBLIC_PROJECT_NAME=APPNAME
NEXT_PUBLIC_PROJECT_ID=your_app_id

# ==============================
# ADMIN AUTHORIZATION
# ==============================

# Wallet address authorized for admin access (lowercase)
AUTHORIZED_ADMIN_ADDRESS=your_ethereum_wallet_address_for_admin_access

# ==============================
# SECURITY & RATE LIMITING
# ==============================

# Rate limiting configuration
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# File upload security
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

# ==============================
# OPTIONAL DEVELOPMENT SETTINGS
# ==============================

# Uncomment to disable rate limiting in development
# DISABLE_RATE_LIMIT=true

# Node environment
NODE_ENV=development
